generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id             String   @id @default(auto()) @map("_id") @db.ObjectId
  created        DateTime @default(now()) @map("created_at")
  aadhaar        String   @unique
  username       String
  dob            DateTime
  weight         Float
  phoneNumber    String
  relativeNumber String

  checkupDate   DateTime? @default(now()) @map("checkup_date")
  bloodPressure String?
  heartRate     String?
  temperature   String?
  cholesterol   String?
  glucoseLevel  String?
  bmi           String?
}

